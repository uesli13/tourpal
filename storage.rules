rules_version = '2';

// Firebase Storage Rules for TourPal App
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload/read their profile images
    match /users/{userId}/profile/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload/read tour images
    match /tours/{tourId}/{fileName} {
      allow read: if true; // Anyone can view tour images
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Allow authenticated users to upload/read general images
    match /images/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public read access for app assets
    match /public/{fileName} {
      allow read: if true;
    }
    
    // Temporary uploads (clean up after 24 hours)
    match /temp/{fileName} {
      allow read, write: if request.auth != null;
    }
  }
}